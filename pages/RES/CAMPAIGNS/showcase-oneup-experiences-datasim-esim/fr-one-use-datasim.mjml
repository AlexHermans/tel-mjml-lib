    <!-- HERO TEXT -->
    <mj-section  mj-class="bg-jeans-blue hero-text" padding="0">
      <mj-column padding="0">
        <mj-text mj-class="fontstack-semi heading-2" padding-top="15px">
            Restez connecté(e) partout <br class="hide-until-lg"/>avec votre <span style="color:#FFF7C7">carte SIM data gratuite.</span>
        </mj-text>
